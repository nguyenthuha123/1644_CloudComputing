<body>
     <nav class="navbar navbar-expand-md fixed-top" style="background-color: #deff07;  font-weight:bold">
        <div class="container">
            <div class="navbar-header"> 
                <h1 class="text-black">ANT Toys</h1>
                
            </div>
            <div class="navbar-nav mr-auto">
                        <a class="text-black" href="/">Home</a>   
            </div>
            
            <div class="navbar-nav mr-auto">

                        <a class="text-black" href="/NewProduct">New Product</a>                 
            </div>    
        </div>
    </nav>
    <br><br><br>
    <div class="container">
            <br>  
            <form action="/search" method="post">Name <input type="text" name="txtName">
            <input type="submit" value="Search Product">
            </form>
            <br>
            <br>
        <table class="table table-hover ">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Picture</th>
                <th scope="col">Describe</th>
                <th scope ="col">Status </th>
                <th scope="col">&nbsp;</th>
            </tr>
      
            </thead>
            
            <tbody>
                {{#each products}}
            <tr>
                <td>{{name}}</td>
                <td>{{price}}</td>
                <td><img class="mx-auto" src="{{picture}} " width="150" height="100" ></td>
                <td>{{describe}}</td>
                <td>{{status}}</td>
                <td><a type="button" class="btn btn-danger btn-sm" href="/delete?id={{_id}}" onclick="return confirm('Are you want to delete?')">Delete</a></td>
                <td><a type= "button" class="btn btn-danger btn-sm"  href="/Edit?id={{_id}}">Edit</a></td>
              </tr>
            {{/each}}

            </tbody>
        </table>
<div class="footer mt-3"
      style="text-align: center; padding: 3px; background-color:  hsl(68, 100%, 51%); color: black; font-weight:bold;">
